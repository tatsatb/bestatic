{% extends "layout.html.jinja2" %}
{% block title %}{{post.metadata["title"]}} | {{ title}}{% endblock %}
{% block description %}{{post.metadata["description"]}}{% endblock %}
{% block content %}


    <div class="container">
     <div class="row">
      <div class="col-sm-10 offset-sm-1 col-md-9 offset-md-1 col-lg-8 offset-lg-2 col-xl-8 offset-lg-2">

<h3 class="tbh3"><br/>{{post.metadata["title"]}}</h3>
<br><br>
        <b><small>Posted on {{post.metadata["date"]}} </small></b>
      <br>
{#        <small>Tags: {{ post.tags|join(', ') }}#}
{# </small>#}

      <small>
          Tags:
          {% for tag in post.tags %}
    <a href="{{root_path}}/post/{{ tag }}{{extension}}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
{% endfor %}

      </small>
          <br><br>
    {{post.content}}

          {% if next_slug != None %}

{#          <p style="float:right"><a href="{{ root_path }}/posts.html">View list#}
{#              of all blog posts </a></p>#}

              <p style="float:right"><a href="{{ root_path }}/post/{{ next_slug }}{{extension}}">View Next Post </a></p>

        {% endif %}

      {% if prev_slug != None %}

          <span style="float:left"><a href="{{ root_path }}/post/{{ prev_slug }}{{extension}}">View Previous Post </a></span>

        {% endif %}

            <p style="text-align: center"><a href="{{ root_path }}/posts{{extension}}">View list of all blog posts </a></p>





                <br><br>


      {% if disqus != False %}
<div id="disqus_thread"></div>
